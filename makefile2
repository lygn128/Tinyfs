client:client.o  LittleEndian.o Connection.o Packet.o
	g++ -o client client.o LittleEndian.o Packet.o Connection.o
Connection.o:Connection.h Connection.cpp
	g++ -c Connection.cpp
Packet.o:Packet.h Packet.cpp
	g++ -c Packet.cpp
client.o:client.cpp
	g++ -c client.cpp
LittleEndian.o:LittleEndian.cpp
	g++ -c LittleEndian.cpp

clean:
	rm *.o

